            <!-- Standard Form Controls -->
            <form class="tag-box tag-box-v3 form-page" name="activity-form" id="content-form">

                <div class="headline"><h3>Inserimento Attività</h3></div>
                <!--Inputs-->
                <h4>Nome Attività</h4>
                <input id="name" type="text" class="form-control" placeholder="es. Ristorante La Spigola" required>
                <!--End Inputs-->
                <div class="margin-bottom-20"></div>

                <!-- Descrizione section-->
                <h4>Descrizione</h4>
                <textarea id="description" class="form-control" rows="7" placeholder="es. Il ristorante La Spigola è conosciuto come uno dei migliori ristoranti di Cagliari..." ></textarea>
                <div class="margin-bottom-20"></div>

                <!-- Image upload section-->

                <h4>Immagini</h4>

                <div class="margin-bottom-10"></div>
                <div id="imageContainer" class="row margin-bottom-10">
                    <div class="col-sm-3 col-xs-6 md-margin-bottom-20" data-img-thumb-pos="0" ></div>
                    <div class="col-sm-3 col-xs-6 md-margin-bottom-20" data-img-thumb-pos="1" ></div>
                    <div class="col-sm-3 col-xs-6 md-margin-bottom-20" data-img-thumb-pos="2"></div>
                    <div class="col-sm-3 col-xs-6 md-margin-bottom-20" data-img-thumb-pos="3" ></div>
                </div>

                <!--<button class="btn-u fileinput-button">-->
                    <!--<i class="fa fa-picture-o">-->
                    <!--</i>-->
                    <!--<input id="fileUpload" type="file" name="files[]"  >-->

                <!--</button>-->

                <button class="btn-u fileinput-button" type="button">
                    <i class="fa fa-picture-o">
                        <input id="fileUpload" type="file" name="files[]">
                    </i>
                    <span>Carica Immagine</span>
                </button>


                <!--<div id="files" class="files"></div>-->
                <hr>
                <div class="margin-bottom-10"></div>


                <!-- Category Section -->

                <h4>Categorie</h4>
                <div class="margin-bottom-10"></div>
                <div class="row" id="catDrop">
                    <div class="col-md-3" data-cp-cbox-pos="0" ></div>
                    <div class="col-md-3" data-cp-cbox-pos="1" ></div>
                    <div class="col-md-3" data-cp-cbox-pos="2"></div>
                    <div class="col-md-3" data-cp-cbox-pos="3" ></div>
                </div>

                <div class="margin-bottom-20"></div>
                <hr>


                <!-- Map Section -->
                <h4>Mappa</h4>

                <p id="latbox">--</p>
                <p id="lngbox">--</p>
                <p id="address">--</p>
                <p>Clicca sulla mappa per indicare la posizione della tua attività</p>
                <div id="map" class="map margin-bottom-50"></div>
                <hr>



            </form>

            <label id="image_array_url"></label>
            <button id="addContentButton" class="btn-u" type="button">Add Activity</button>
            <button id="updateContentButton" class="btn-u" type="button">Update Activity</button>

            <!-- End Content -->

        </div>

