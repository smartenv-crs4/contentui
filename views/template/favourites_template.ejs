<script>
    Handlebars.registerHelper('list', function(items, options) {
        var out = "";
        var valuate={col1:{},col2:null}
        for(var i=0, l=items.length; i<l; i+=2) {

            valuate.col2=((i+1)<l)?items[i+1]:null;
            valuate.col1=items[i];
            out = out + options.fn(valuate);
        }

        return out;
    });

</script>


